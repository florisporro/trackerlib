{
	"compilerOptions": {
		"target": "ES2015",
		"module": "ES2020",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"outDir": "./build/esm",
		"experimentalDecorators": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
